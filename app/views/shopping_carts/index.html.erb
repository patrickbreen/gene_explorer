<p id="notice"><%= notice %></p>

<h1>My Shopping Cart</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shopping_carts.each do |shopping_cart| %>
      <tr>
        <td><%= shopping_cart.product.description %></td>
        <td><%= shopping_cart.quantity %></td>
        <td><%= link_to 'Remove', user_shopping_cart_path(@current_user,shopping_cart), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

