<p id="notice"><%= notice %></p>
<h1>Listing Orders</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.description %></td>
        <td><%= order.price %></td>
        <td><%= order.quantity %></td>
        <td><%= order.user_id %></td>
        <td><%= link_to 'Show', user_order_path(:user_id,order) %></td>
        <td><%= link_to 'Edit', edit_user_order_path(:user_id,order) %></td>
        <td><%= link_to 'Destroy', user_order_path(:user_id, order), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_user_order_path(user_id) %>
